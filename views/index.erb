<!DOCTYPE html>
<html lang="ja">
<head>
  <meta charset="UTF-8">
  <title>account_book</title>
  <script src="/public/assets/js/Chart.min.js"></script>
</head>
<body>
  <form action="/create" method="post">
    <label for="title">商品名</label> 
    <input type="text" name="title" id="title">
    <label for="price">金額</label>
    <input type="text" name="price" id="price">
    <select name="category" id="category">
      <% @categories.each do |category| %>
        <option value="<%=category.id%>"><%=category.name%></option>
      <% end %>
    </select>
    <input type="submit" value="追加">
  </form>

  <ul>
    <% @categories.each do |category| %>
      <li><a href="/category/<%= category.id %>"><%= category.name %></a></li>
    <% end %>
  </ul>
  
  <div>
    <% @items.each do |item| %>
      <div>
        <p><%= item.title %></p>
        <p><%= item.price %>円</p>
        <p><%= item.category.name %></p>
        <span>
          <form action="/delete/<%= item.id %>" method="post">
            <input type="submit" value="削除">
          </form>
        </span>
        <span>
        <!-- getにしても動いた件
          <form action="/edit/<%= item.id %>" method="get">
          -->
          <form action="/edit/<%= item.id %>" method="post">
            <input type="submit" value="編集">
          </form>
        </span>
      </div>
    <% end %>
  </div>

  <div>
    <p>合計: <%= @total %>円</p>
    <a href="/">TOPページヘ</a>
  </div>

  <canvas id="graph" height="500" width="500"></canvas>
  <script>
    var doughnutData = [
      <% @items.each do |item| %>
      {
        value: <%= item.price %>,
        label: '<%= item.title %>',
        color: '<%= item.price > 0 ? "#aaf2fb" : "#ffb6b9" %>'
      },
      <% end %>
    ];

    var myDoughnut = new Chart(document.getElementById("graph").getContext("2d")).Doughnut(doughnutData);
  </script>

</body>
</html>
